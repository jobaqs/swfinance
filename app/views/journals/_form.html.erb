<%= form_for(@journal, :html => { :class => "form-horizontal", :role => "form" }) do |f| %>
  <% if @journal.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@journal.errors.count, "error") %> prohibited this journal from being saved:</h4>

      <ul>
      <% @journal.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label :journal_date, :class => "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.text_field :journal_date, autofocus: true, value: Date.today, :class => "datepicker form-control floating-label", placeholder: "Date" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :payee, :class => "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.text_field :payee, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.text_area :description, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :account_id, :class => "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.collection_select :account_id, Account.order(:account_number),:id,:account_name %>
    </div>
  </div>
    <div class="form-group">
      <%= f.label :expense_type_id, :class => "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.collection_select :expense_type_id, ExpenseType.order(:name),:id,:name %>
      </div>
    </div>
  <div class="form-group">
    <%= f.label :amount, :class => "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.text_field :amount, :class => "form-control", style: "text-align: right" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-danger pull-right" %>
    </div>
  </div>
<% end %>

