<div class="jumbotron" style="max-width: 40%; margin-left: auto; margin-right: auto;">

<h2>Log in</h2>
<hr>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, class: "form-control floating-label", placeholder: "Email" %>
  </div>
  <br/>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off" , class: "form-control floating-label", placeholder: "Password" %>
  </div>
  <br/>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-inverse btn-raised pull-right" %>
  </div>
<% end %>


<%= render "devise/shared/links" %>
</div>



